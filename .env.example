# Email Finder - Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Brave Search API Configuration
BRAVE_API_KEY=your_brave_api_key
BRAVE_SEARCH_RATE_LIMIT=10  # Requests per minute

# ZenRows API Configuration
ZENROWS_API_KEY=your_zenrows_api_key
ZENROWS_RATE_LIMIT=10  # Requests per minute
ZENROWS_USE_PREMIUM=true  # Set to true if using premium account
ZENROWS_JS_RENDERING=true  # Enable JavaScript rendering
ZENROWS_PROXY_ROTATION=true  # Enable proxy rotation

# AWS Configuration for Claude 3.7 Sonnet
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1  # AWS region where Bedrock is available
CLAUDE_MODEL_ID=anthropic.claude-3-sonnet-20240229  # Claude 3.7 Sonnet model ID
CLAUDE_RATE_LIMIT=10  # Requests per minute
CLAUDE_MAX_TOKENS=4096  # Maximum tokens per request

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email
FIREBASE_DATABASE_URL=your_firebase_database_url

# Gmail OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_OAUTH_REDIRECT=http://localhost:5000/api/email-gmail/oauth-callback

# Flask Configuration
FLASK_APP=email_finder.main
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-for-flask

# Browser Automation Configuration
BROWSER_HEADLESS=true  # Set to true for production
BROWSER_TIMEOUT=30000  # Timeout in milliseconds
BROWSER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36
BROWSER_SCREENSHOT_DIR=./screenshots  # Directory for screenshots
BROWSER_MAX_INSTANCES=5  # Maximum concurrent browser instances

# Application Configuration
LOG_LEVEL=INFO  # Options: debug, info, warning, error, critical
CACHE_ENABLED=true  # Enable caching
CACHE_EXPIRY=3600  # Cache expiry in seconds
PARALLEL_WORKERS=4  # Number of parallel workers
REQUEST_TIMEOUT=30  # Request timeout in seconds
MAX_RETRIES=3  # Maximum retry attempts
BACKOFF_FACTOR=2  # Exponential backoff factor

# Multi-Client Settings
DEFAULT_CLIENT_QUOTA=100
DEFAULT_CLIENT_RATE_LIMIT=5

# Zapier Integration
ZAPIER_CLIENT_ID=your_zapier_client_id
ZAPIER_CLIENT_SECRET=your_zapier_client_secret

# Proxy Settings (Optional)
USE_PROXY=false
PROXY_URL=http://your-proxy-url:port
PROXY_USERNAME=your_proxy_username
PROXY_PASSWORD=your_proxy_password 